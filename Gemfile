source "http://rubygems.org"

gem "rails", "3.2.11"
gem "sqlite3"

gem "ffaker", require: false

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem "sass-rails"
  gem "coffee-rails"
  gem "uglifier"
end
gem "therubyracer"

group :test do
  gem "shoulda-matchers"
end

group :test, :development do
  gem "rspec-rails"
end
